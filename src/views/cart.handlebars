{{#each cartItem}}
<!-- Item en el carrito -->
<li class="list-group-item d-flex justify-content-between align-items-center">
    <div class="row align-items-center">
        <div class="col-auto">
            <img src="{{this.product.photo}}" class="img-fluid rounded" alt="{{this.product.title}}">
        </div>
        <div class="col">
            <p class="mb-0">{{this.product.title}}</p>
            <span class="badge bg-primary rounded-pill">{{this.quantity}}</span>
            <span class="badge bg-success">${{this.product.price}}</span>
        </div>
    </div>
</li>
{{/each}}